{
  "name": "@modular-prompt/simple-chat",
  "version": "0.1.15",
  "type": "module",
  "description": "Sample implementation: Simple chat application using Moduler Prompt with MLX models",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "simple-chat": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -b --force",
