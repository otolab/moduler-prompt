    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.35.0",
    "typescript": "^5.4.2",
    "vitest": "^3.2.4"
