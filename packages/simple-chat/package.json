{
  "name": "@moduler-prompt/simple-chat",
  "version": "0.1.5",
  "type": "module",
  "description": "Sample implementation: Simple chat application using Moduler Prompt with MLX models",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "simple-chat": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "prepack": "npm run clean && npm run build:deps && npm run build",
    "build:deps": "npm run build -w @moduler-prompt/core -w @moduler-prompt/utils -w @moduler-prompt/driver -w @moduler-prompt/process"
  },
  "dependencies": {
    "@moduler-prompt/core": "^0.1.1",
    "@moduler-prompt/driver": "^0.1.6",
    "@moduler-prompt/process": "^0.1.3",
    "@moduler-prompt/utils": "^0.1.1",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.35.0",
    "typescript": "^5.4.2",
    "vitest": "^3.2.4"
  },
  "license": "MIT",
  "private": false,
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
