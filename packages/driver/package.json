{
  "name": "@moduler-prompt/driver",
  "version": "0.2.1",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "scripts",
    "src/mlx-ml/python"
  ],
  "scripts": {
    "build": "tsc -b --force",
    "test": "vitest",
    "test:run": "vitest run",
    "test:system": "vitest run --config vitest.config.system.ts",
    "test:system:mlx": "vitest run --config vitest.config.system.ts test/system/mlx-parameters.system.test.ts",
    "test:download-model": "cd src/mlx-ml/python && uv run mlx_lm.generate --model mlx-community/gemma-3-270m-it-4bit --prompt 'test' --max-tokens 1",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "prepack": "npm run clean && npm run build:deps && npm run build",
    "build:deps": "npm run build -w @moduler-prompt/core",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "postinstall": "node scripts/setup-mlx.js || true",
    "setup-mlx": "node scripts/setup-mlx.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.61.0",
    "@google-cloud/vertexai": "^1.10.0",
    "@moduler-prompt/core": "^0.1.1",
    "@types/js-yaml": "^4.0.9",
    "google-auth-library": "^9.15.1",
    "js-yaml": "^4.1.0",
    "openai": "^5.19.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "typescript": "^5.3.3",
    "vitest": "^3.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
